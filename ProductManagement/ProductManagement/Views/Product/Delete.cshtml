@model DAL.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="card">
    <div class="card-header">
        <h3>@Model.ProductName</h3>
    </div>
    <div class="card-body">
        <p><strong>Description:</strong> @Model.ProductDescription</p>
        <p><strong>Price:</strong> @Model.ProductPrice</p>
        <p><strong>Type:</strong> @Model.ProductType</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


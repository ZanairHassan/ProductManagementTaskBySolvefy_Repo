@model IEnumerable<DAL.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>UserName</th>
               @*  <th>Email</th> *@
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                   @*  <td>@item.Email</td> *@
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.UserId })">Details</a>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.UserId })">Edit</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.UserId })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}

<a class="btn btn-primary mt-3" href="@Url.Action("Register")">Create New User</a>
<a class="btn btn-primary mt-3" href="@Url.Action("Index","Product")">Product Page</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
